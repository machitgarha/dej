{
    "config.json": {
        "interface.name": {
            "required": true
        },
        "interface.mac": {
            "required": true,
            "type": "macAddress"
        },
        "save_to.path": {
            "required": true,
            "type": "absolutePath"
        },
        "executables.screen": {
            "required": false,
            "defaultValue": "screen"
        },
        "executables.tcpdump": {
            "required": false,
            "defaultValue": "tcpdump"
        },
        "save_to.format": {
            "required": false,
            "type": "alphanumeric",
            "defaultValue": "txt"
        },
        "backup.dir": {
            "required": false,
            "type": "path",
            "defaultValue": "backup"
        },
        "backup.timeout": {
            "required": false,
            "type": "integer",
            "defaultValue": 60
        },
        "logs.screen": {
            "required": false,
            "type": "boolean",
            "defaultValue": false
        },
        "logs.skipped_packets": {
            "required": false,
            "type": "boolean",
            "defaultValue": false
        },
        "logs.path": {
            "required": false,
            "type": "absolutePath",
            "defaultValue": "/var/log/dej"
        }
    },

    "users.json": {
        "name": {
            "type": "alphanumeric"
        },
        "mac": {
            "type": "macAddress"
        }
    }
}
